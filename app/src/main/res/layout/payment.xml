<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="true"
    android:background="#D0C7C7"
    android:orientation="vertical"
    tools:context=".Activity.PaymentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E61313"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:backgroundTint="#E61313"
            android:contentDescription="Quay về trang trước"
            app:srcCompat="@drawable/back_icon3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Payment"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/payment_img"
            android:layout_width="120dp"
            android:layout_height="170dp"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/payment_tv_tenphim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Ten phim"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payment_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ngay"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/payment_tv_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="giờ"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/payment_tv_theater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="á"
                android:text="CGV"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/payment_tv_ghe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ghế: "
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/payment_tv_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="food order"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/payment_tv_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng: "
                android:textColor="#ED1313"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Chọn phương thức thanh toán"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <RadioButton
                android:id="@+id/rb_momo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Ví MoMo"
                android:drawableLeft="@mipmap/ic_momo"
                />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/rb_paypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Ví Paypal"
                android:drawableLeft="@mipmap/ic_paypal"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/rb_atm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Thẻ ATM nội địa"
                android:drawableLeft="@mipmap/ic_atm"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/rb_zalo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Ví ZaloPay"
                android:drawableLeft="@mipmap/ic_zalo"/>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/rb_vnpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Ví VNPAY"
                android:drawableLeft="@mipmap/ic_vnpay"/>
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi đông ý với các điều khoản sử dụng và cam kết đang mua vé cho khán giả phù hợp với lứa tuổi."
        android:layout_margin="10dp"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/payment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tôi đồng ý và thanh toán"
        android:backgroundTint="#E12D2D"
        />


</LinearLayout>