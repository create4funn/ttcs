<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E61313"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back_account"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:backgroundTint="#E61313"
            android:contentDescription="Quay về trang trước"
            android:src="@drawable/back_icon3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="My Account"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/catavata"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp"
            />

        <LinearLayout
            android:layout_width="244dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="abc@gmail.com"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/acChangepassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/baseline_password_24"
        android:gravity="center|left"
        android:text="  Change Password"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"/>

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/acLogout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:gravity="center|left"
        android:text="  Log out"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"/>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/acDelete"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/baseline_delete_24"
        android:gravity="center|left"
        android:text="  Delete Account"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"/>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_margin="10dp"/>
</LinearLayout>