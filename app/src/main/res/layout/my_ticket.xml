<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E61313"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:backgroundTint="#E61313"
            android:contentDescription="Quay về trang trước"
            android:src="@drawable/back_icon3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="My Ticket"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab_layout"
        >

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_unwatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phim chưa xem" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phim đã xem" />


    </com.google.android.material.tabs.TabLayout>
    <FrameLayout
        android:id="@+id/frame_layout_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>